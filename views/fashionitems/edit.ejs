


<%- include("../partials/header") %>



 
        <h1 style="text-align:center;">
            edit  fashion item <%=fashionItem.name%>
        </h1>
    
        
        <div style="width: 25%; margin: 0 auto;">
            <form action="/fashion/<%=fashionItem._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="fashionitem[name]" value="<%=fashionItem.name%>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="fashionitem[price]" value="<%=fashionItem.price%>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="fashionitem[img]" value="<%=fashionItem.img%>">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="fashionitem[desc]" value="<%=fashionItem.desc%>">
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        Submit
                    </button>
                </div>
  
            </form>
      <a href="/fashion">go back!</a>
    </div>

 

